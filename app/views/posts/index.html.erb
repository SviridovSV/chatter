<h3> Show only posts with rate </h3>
<%= form_tag(posts_path, method: :get) do %>
  <%= text_field_tag :total_rate, params[:total_rate] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<h1>All Posts</h1>

<ul id="posts">
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %> Post rate <%= post.total_rate || 'is absent' %> Comments (<%= number_of_comments(post) %>)
    </li>
  <% end %>
</ul>


