<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<h3>Rate of post <%= rate_exist? ? rating : 'is absent' %> </h3>
<h3>Comments (<%= @post.comments.size %>)</h3>
<%= render partial: 'posts/comment', collection: @post.comments.reverse %>
<%= render partial: 'comments/form', post: @post %>
<%= link_to "<< Back to Posts List", posts_path %>
<% if can? :destroy, @post %>
  | <%= link_to "delete", post_path(@post), method: :delete, data: {confirm: "Really delete the post?"} %>
<% end %>
<% if can? :update, @post %>
 | <%= link_to "edit", edit_post_path(@post) %>
<% end %>

